<style>
  body {
    margin: 0;
    background-image: linear-gradient(
      #1c77e0,
      #5b68d8,
      #498aa3,
      #304ca8,
      #3740a4
    );
  }

  .center {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  h2{
    font-size: 64px;
    font-family: "campton-bold";
    color: #FFFFFF;
    gap: 10px;
    padding: 60px 10px 40px 10px;
    text-align: center;
    margin: 0;
  }

  h4{
    font-family: "campton-bold";
    font-size: 30px;
    color: #FFFFFF;
    padding: 10px 10px 10px 10px;
    margin: 0;
    text-align: center;
   
  }

  .tekst {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @media (max-width: 1024px) {

    h2{
      padding-top: 100px;
    }
    
    h4{
      padding-bottom: 22px;
      text-align: center;
    }
    .center {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  }

  @media (max-width: 820px) {
    h2 {
      font-size: 35px;
      padding: 20px 0px 10px 0px;
    }

    h4{
        font-size: 20px;
       text-align: center;
        padding-bottom: 30px;
    }

    .tekst {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .center {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  }


</style>