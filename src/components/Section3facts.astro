---
import Flipcard from "./Flipcard.astro";
import Flipcard2 from "./Flipcard2.astro";
import Flipcard3 from "./Flipcard3.astro";
import Flipcard4 from "./Flipcard4.astro";
import Flipcard5 from "./Flipcard5.astro";
import Flipcard6 from "./Flipcard6.astro";
---

<section>
<div class="container_section3">
    <h2>6 facts omkring plastik</h2>
</div>

<div id="flex">
<div id="grid">

    <div><Flipcard /></div>
    <div> <Flipcard2 /></div>
    <div><Flipcard3 /></div>
    <div> <Flipcard4 /></div>
    <div><Flipcard5 /></div>
    <div> <Flipcard6 /></div>

</div>
</div>
</section>



<style>



.container_section3{
        background-image: url(./images/skrald_strand.webp);
        background-size: cover;
        background-repeat: no-repeat;
        height: 70vh;
    }

    h2{
          color: white; 
          font-size: 64px; 
          z-index: 1; /* SÃ¸rg for, at teksten er over billedet */
          font-family: "campton-bold";
          text-align: center;
          padding-top: 15rem;
          margin-top: 0px;
    }



#grid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr ;
        grid-template-rows: 1fr 1fr;
        overflow: hidden;
        gap: 10px;
        padding-top: 10px;
        padding-bottom: 10px;
        padding-inline: 10px;
        
        
       
        
    }

    #flex {
        display: flex;
        justify-content: center;
    }





@media (max-width: 500px) {
h2{
      font-size: 64px; 
}
#grid {
    display: grid;
    grid-template-columns: 1fr ;

}

}

@media (max-width: 1200px) {
h2{
      font-size: 64px; 
}
#grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-columns: 1fr 1fr;
}

.container_section3{
    height: 50vh;
}

}
  


@media (max-width: 700px) {
h2{
      font-size: 64px; 
}
#grid {
    display: grid;
    grid-template-columns: 1fr ;
    grid-template-rows: 6fr;

}

}

@media (max-width: 820px) {
    h2{
        font-size: 35px;
        padding-top: 120px;
    }

    #grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr 1fr;
    }

    .container_section3{
        height: 50vh;
    }
}


 


</style>