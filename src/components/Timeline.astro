  <style>
    .alt {
      background: rgba(0, 0, 0, 0.104);
      margin: 5%;
    }
    .timeline {
      display: grid;
      grid-template-columns: 1fr 1fr;
      padding: 5%;
    }

    img {
      width: 50%;
      padding: 5%;
      margin-left: 25%;
    }

    h1 {
      font-size: px;
      font-family: "campton-bold";
      color: #ffffff;
      padding: 50px 10px 50px 10px;
      text-align: center;
      margin: 0;
    }

    h3 {
      color: #56d8bc;
      font-size: 30px;
      padding: 2%;
    }

    h2 {
      color: white;
      font-size: 64px;
      z-index: 1; /* Sørg for, at teksten er over billedet */
      font-family: "campton-bold";
      text-align: center;
      padding: 5%;
    }
    p {
      font-family: "rubik-regular";
      font-weight: lighter;
      font-size: 16px;
      color: #f4f4f4;
      margin: 15px;
      width: 85%;
    }

    .timeline {
      position: relative;
      max-width: 1200px;
      margin: 0 auto;
    }

    .timeline::after {
      content: "";
      position: absolute;
      width: 6px;
      background-color: #ff1054;
      top: 0;
      bottom: 0;
      left: 50%;
      margin-left: -3px;
    }
    .tekst {
      padding: 10px;
      position: relative;
    }

    /* The circles on the timeline */
    .tekst::after {
      content: "";
      position: absolute;
      width: 25px;
      height: 25px;
      right: -14px;
      background-color: #ff1054;
      border: 1px solid #ff1054;
      top: 150px;
      border-radius: 50%;
      z-index: 1;
    }

    @media screen and (max-width: 600px) {
      /* Place the timelime to the left */
      .timeline::after {
        left: 31px;
      }

      /* Full-width containers */
      .container {
        width: 100%;
        padding-left: 70px;
        padding-right: 25px;
      }

      /* Make sure that all arrows are pointing leftwards */
      .container::before {
        left: 60px;
        border: medium solid white;
        border-width: 10px 10px 10px 0;
        border-color: transparent white transparent transparent;
      }

      /* Make sure all circles are at the same spot */
      .left::after,
      .right::after {
        left: 15px;
      }

      /* Make all right containers behave like the left ones */
      .right {
        left: 0%;
      }
    }
  </style>
