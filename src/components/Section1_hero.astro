---
import Talebobbel from "./Talebobbel.astro";
import StotFormular from "./Stot_formular.astro";
import Burgermenu from "./Burgermenu.astro";
---

<div class="hero1">
  <Burgermenu />
  <div class="tekst">
      <div class="talebobbel">
     <Talebobbel />
     </div>

     <div class="formular">
     <StotFormular />
     </div>

  </div>
</div>

<style>
  .tekst {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    padding-top: 30px;
    padding-bottom: 30px;
   padding-inline: 80px;
  margin-left: 6%;
   
  }
  .hero1 {
    background-image: url(/assets/images/plastic2.webp);
    background-size: cover;
    background-repeat: no-repeat;
    height: auto;
    margin: 0;
  }

  @media (max-width: 820px) {
    .tekst {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-left: 0;
  }
  }
</style>
